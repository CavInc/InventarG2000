<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/app_blue"
                    android:width="4dp"/>
            <solid android:color="@color/app_blur_200"/>
            <padding android:top="8dp"
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="@color/app_blue"
                android:width="4dp"/>
        </shape>
        <padding android:top="8dp"
            android:bottom="8dp"
            android:left="8dp"
            android:right="8dp"/>
    </item>
</selector>